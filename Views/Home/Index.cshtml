@model AccountModel
@{
    ViewData["Title"] = "Home Page";
}



<html>

<head> </head>

<body>
    <div>
        @if (@Model == null || !@Model.LoggedIn)
        {
            <div id="login">
                <a asp-action="Login">Log in to Spotify</a>
            </div>
        }
        else
        {
            <div id="login">
                <p>logged in as @Model.Username <a href="/login">Sign Out</a></p>
            </div>
            @using (Html.BeginForm("Search"))
            {
                <p>
                    <label for="site-search">Find album:</label>
                    <input type="search" id="site-search" name="s" aria-label="Album name">

                    <input id="btnSearchAlbum" type="submit" value="Search"></input>

                </p>
            }
        }
    </div>



    <script id="loggedin-template" type="text/x-handlebars-template">
    <h1>Logged in as </h1>
    <img id="avatar" width="200" src="" />
    <dl>
     <dt>Display name</dt><dd></dd>
     <dt>Username</dt><dd></dd>
     <dt>Email</dt><dd></dd>
     <dt>Spotify URI</dt><dd><a href=""></a></dd>
     <dt>Link</dt><dd><a href=""></a></dd>
     <dt>Profile Image</dt><dd></dd>
    </dl>
    <p><a href="/">Log in again</a></p>
 </script>
</body>

</html>
